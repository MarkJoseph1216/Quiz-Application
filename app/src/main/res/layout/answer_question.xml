<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="@drawable/imgbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="63dp">

    <TextView
        android:textColor="#fff"
        android:fontFamily="@font/mmedium"
        android:id="@+id/tvSubCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="SubCar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>


    <TextView
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="@font/mregular"
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="Easy"
        android:layout_marginTop="60dp"
        android:textSize="25dp" />

    <TextView
        android:textStyle="bold"
        android:fontFamily="@font/mregular"
        android:id="@+id/tvQuestions"
        android:layout_width="302dp"
        android:layout_height="205dp"
        android:layout_below="@+id/tvLevel"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="120dp"
        android:text=""
        android:textSize="25dp"
        android:gravity="center"/>

        <HorizontalScrollView
            android:layout_marginLeft="55dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:fillViewport="true"
            android:scrollbars="horizontal|vertical"
            android:layout_below="@+id/tvQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioGroup
            android:gravity="center_vertical"
            android:id="@+id/mRadioGroupChoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvQuestions"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <RadioButton
                android:buttonTint="@color/green"
                android:fontFamily="@font/mregular"
                android:id="@+id/mRadioButtonChoice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:textSize="20sp"
                tools:targetApi="jelly_bean" />

            <RadioButton
                android:buttonTint="@color/green"
                android:fontFamily="@font/mregular"
                android:id="@+id/mRadioButtonChoice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:singleLine="true"
                tools:targetApi="jelly_bean" />

            <RadioButton
                android:buttonTint="@color/green"
                android:fontFamily="@font/mregular"
                android:id="@+id/mRadioButtonChoice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:singleLine="true"
                tools:targetApi="jelly_bean" />

            <RadioButton
                android:buttonTint="@color/green"
                android:fontFamily="@font/mregular"
                android:id="@+id/mRadioButtonChoice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:singleLine="true"
                tools:targetApi="jelly_bean" />
            </RadioGroup>
        </HorizontalScrollView>

    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvScore"
        android:id="@+id/imgCheckCorrect"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:visibility="gone"
        android:textColor="@color/red"
        android:fontFamily="@font/digital"
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Score: 0"
        android:textSize="35sp" />

    <TextView
        android:textColor="@color/green"
        android:fontFamily="@font/digital"
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Timer:"
        android:textSize="30sp" />

    <Button
        android:textStyle="bold"
        android:fontFamily="@font/mregular"
        android:id="@+id/btnNext"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:text="Next"
        android:textColor="@color/black"
        android:background="@drawable/btn_outline"/>



</RelativeLayout>